@model Intrigma.DonorSpace.Web.ViewModels.AddAdministratorForm

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Add Administrator</h1>
            </hgroup>
        </div>
    </section>
}
<section id="AddAdministrator" class="form">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>Add Administrator</legend>
            <ol>
                <li>
                    @Html.HiddenFor(m => m.CharityId)
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName)
                    @Html.ValidationMessageFor(m => m.UserName)
                </li>
                <li>
                    @Html.LabelFor(m => m.FullName)
                    @Html.TextBoxFor(m => m.FullName)
                    @Html.ValidationMessageFor(m => m.FullName)
                </li>
                <li class="password">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </li>
                <li class="password">
                    @Html.LabelFor(m => m.ConfirmedPassword)
                    @Html.PasswordFor(m => m.ConfirmedPassword)
                    @Html.ValidationMessageFor(m => m.ConfirmedPassword)
                </li>
            </ol>
            <div class="center">
                <input type="submit" value="Save" />
            </div>
        </fieldset>
    }
</section>


@section startUpscripts {
    <script>
        $(function() {
            donorSpace.spinner.showWhenPosting("#AddAdministrator form");
        });
    </script>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
